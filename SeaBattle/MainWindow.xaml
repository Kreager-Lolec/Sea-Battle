    <WrapPanel Name="Layout"  Orientation="Horizontal" Width="700" Height="650" Margin="34,0,34.8,-19.8">
        <WrapPanel x:Name="Map" Margin="0,0,334,239.2" Width="330" Height="434">
            <Label Content="                     Your Map" Height="35" Width="331" FontSize="20" Background="Bisque"/>
        </WrapPanel>
        <WrapPanel x:Name="Shipmap" Margin="-320,0,0,239.2" Width="330" Height="434">
            <Label Content="                Available Ships" Height="35" Width="331" FontSize="20" Background="Bisque"/>
        </WrapPanel>
        <WrapPanel x:Name ="EnemyMap" Width="330" Margin="-320,0,0,239.2" Height="434" Visibility="Hidden">
